#!/bin/sh

dir=$(dirname $0)
root=$(readlink -f $dir/../..)
tests=$(find $root -name '*.wv')
exitcode=0
for file in $tests; do
    set -x
    $dir/wvnulrun $file "$@"
    ret=$?
    set +x
    if [ "$ret" -ne 0 ]; then
	echo "! $0: $dir/wvnulrun returned non-zero exit code ($ret)  FAILED";
	exitcode=1
    fi
done
exit $exitcode

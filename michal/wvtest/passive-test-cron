#!/usr/bin/env bash

# Copy test script somewhere else so that it is not overwritten while
# it changes branches
cp $(dirname -- $0)/passive-test ~/bin

(set -o pipefail; ~/bin/passive-test "$@" 2>&1 | tee passive-test.log)
success=$?

wvtest2html.py < passive-test.log > passive-test-report.html && mv passive-test-report.html ~/public_html/nul/ || exit 1

if [ $success != 0 ]; then
    (
	cat <<EOF
Subject: TUD's testbed: PASSIVE Intelligence test failed!
To: sojka@os, passive-dev@listserv.tssg.org

This is an automatically generated message. Full log can be found at
http://os.inf.tu-dresden.de/~sojka/nul/passive-test-report.html

EOF
	export COLUMNS=100
	cat passive-test.log | tr -d '\015' | wvformat | wvwrap #| iconv -f ASCII -t ASCII//IGNORE
    ) | /usr/sbin/sendmail -ti
fi

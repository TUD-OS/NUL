# -*- Mode: Python -*-

import nul

Import('target_env')
nul.App(target_env, 'sigma0',
        SOURCES = Glob('*.cc'),
        LIBS    = [ 'hostvesa', 'host', 'service'],
        LINKSCRIPT = 'linker.ld',
        MEMSIZE = 3<<12) # enough memory for three stacks - echo, parent, worker thread running on boot cpu
# EOF
